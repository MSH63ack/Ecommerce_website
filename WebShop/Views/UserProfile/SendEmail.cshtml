@{
	ViewData.AddActivePage(UserProfileMenuNavPages.SendEmail);
}
@if (User.IsInRole("Admin"))
{
	<h2><strong>Send email to all users</strong></h2>

	<form asp-action="SendEmail" method="post" style="margin-top: 50px">
		<div class="form-group">
			<label for="subject">Subject</label>
			<input type="text" id="subject" name="subject" class="form-control" placeholder="enter email subject">
		</div>
		<div class="form-group">
			<label for="text">Text</label>
			<textarea class="form-control" id="text" name="text" rows="3" placeholder="enter your message"></textarea>
		</div>
		<div class="form-group">
			<input type="submit" value="Send" class="btn btn-success" />
		</div>
		<h4>After submitting it may take a few minutes</h4>
	</form>
}
else
{
	<h2><strong>Support page</strong></h2>
	<h4 style="margin-top: 20px">Send email to administrator</h4>

	<form asp-action="SendEmail" method="post" style="margin-top: 50px">
		<div class="form-group">
			<label for="subject">Subject</label>
			<input type="text" id="subject" name="subject" class="form-control" placeholder="enter email subject">
		</div>
		<div class="form-group">
			<label for="text">Text</label>
			<textarea class="form-control" id="text" name="text" rows="3" placeholder="enter your message"></textarea>
		</div>
		<div class="form-group">
			<input type="submit" value="Send" class="btn btn-success" />
		</div>
		<h4>After submitting it may take a few minutes</h4>
	</form>
}