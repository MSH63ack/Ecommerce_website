<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Auto Web Shop</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/css/navbar-fixed-side.css" />
        <link rel="stylesheet" href="~/lib/Font-Awesome/web-fonts-with-css/css/fontawesome-all.min.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/navbar-fixed-side.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
              asp-fallback-href="~/lib/Font-Awesome/web-fonts-with-css/css/fontawesome-all.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
    </environment>
    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-3 col-md-3 col-lg-2" style="padding-left: 3px;">
                    <nav class="navbar navbar-default navbar-fixed-side" style="height: 100%; margin-bottom: 0; background: #438f5f;">
                        @await Html.PartialAsync("_UserProfileMenuPartial.cshtml")
                    </nav>
                </div>
				<div class="col-sm-9 col-md-9 col-lg-10" style="margin-left: -7px;">
					<div class="body-content">
						@RenderBody()
					</div>
					<div class="container" style="background-color: gray; width: 100%; margin-top:60px">
						<!----------- Footer ------------>
						<footer class="footer-bs" >
							<div class="row" style="color: black">
								<div class="col-md-5 footer-brand animated fadeInLeft">
									<h3>AShop</h3>
									<p>Here you can find different type of services for your car.</p>
								</div>
								<div class="col-md-3 footer-nav animated fadeInUp">
									<h3 style="padding-left: 10%">Menu</h3>

									<ul class="pages">
										<li class="@UserProfileMenuNavPages.MainNavClass(ViewContext)"><a asp-controller="Home" asp-action="Main" style="color: white"> Home</a></li>
										<li class="@UserProfileMenuNavPages.ProductsNavClass(ViewContext)"><a asp-controller="Product" asp-action="Products" style="color: white"> Products</a></li>
										<li class="@UserProfileMenuNavPages.CartDetailsNavClass(ViewContext)"><a asp-controller="Cart" asp-action="Details" style="color: white"> My Cart</a></li>
										<li class="@UserProfileMenuNavPages.ManageAccountNavClass(ViewContext)"><a asp-controller="Manage" asp-action="Index" style="color: white"> Manage account</a></li>
										<li class="@UserProfileMenuNavPages.UserProfileNavClass(ViewContext)"><a asp-controller="UserProfile" asp-action="ManageUserProfile" style="color: white"> Manage User profile</a></li>
										@if (User.IsInRole("Admin"))
										{
											<li class="@UserProfileMenuNavPages.SendEmailNavClass(ViewContext)"><a asp-controller="UserProfile" asp-action="SendEmail" style="color: white"> Send Emails</a></li>
										}
										else
										{
											<li class="@UserProfileMenuNavPages.SendEmailNavClass(ViewContext)"><a asp-controller="UserProfile" asp-action="SendEmail" style="color: white"> Support page</a></li>

										}
									</ul>
					
								</div>
								<div class="col-md-3 footer-ns animated fadeInRight">
									<h3>Newsletter</h3>
									<p>
										<div class="input-group">
											<input type="text" class="form-control" placeholder="Search for...">
											<span class="input-group-btn">
												<button class="btn btn-default" type="button"><span class="glyphicon glyphicon-envelope"></span></button>
											</span>
										</div><!-- /input-group -->
									</p>
								</div>
							</div>
						</footer>
						<hr />
						<section style="text-align:center; margin:10px auto; padding-bottom: 5px; color: black"><p>Designed by <a href="#" style="color: white">Marta Sh.</a></p></section>
					</div>
					<footer>
						<p style="text-align:center; padding-top: 20px">&copy; 2019 - Auto Web Shop</p>
					</footer>
				</div>
            </div>
        </div>
    }
    else
    {
        <nav id="header" class="navbar navbar-default navbar-fixed-top">
            <div id="header-container" class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a id="brand" asp-area="" asp-controller="Home" asp-action="Main" class="navbar-brand">Auto Web Shop</a>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li><a asp-area="" asp-controller="Home" asp-action="Main">Home</a></li>
                        <li><a asp-area="" asp-controller="Product" asp-action="Products">Products</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
                    </ul>
                    @await Html.PartialAsync("_LoginPartial")
                </div>
            </div>
        </nav>
        <div id="content-block" class="container body-content content-padding-md">
            @RenderBody()
            <hr />

            <footer>
                <p>&copy; 2019 - Auto Web Shop</p>
            </footer>
        </div>
    }

    @RenderSection("Scripts", required: false)
</body>
</html>
